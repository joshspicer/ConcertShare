<?xml version="1.0" encoding="utf-8"?>
<GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/colorPrimary"
	android:minWidth="25px"
	android:minHeight="25px"
	android:elevation="2dp"
	android:layout_margin="10px"
	android:columnCount="3"
	>
	<ImageView
		android:src="@android:drawable/ic_menu_gallery"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_margin="15px"
		android:id="@+id/concertItemImage"
		android:scaleType="fitXY"
		android:adjustViewBounds="true"
	/>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView
			android:text="hello!!"
			android:id="@+id/concertItemHeading"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textAlignment="center"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_margin="15px"
	 />
		<TextView
			android:text="this is a longer description that may be too big!"
			android:id="@+id/concertItemSubHeading"
			android:layout_width="220.0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15px"
			android:scrollHorizontally="false"
			 />
	</LinearLayout>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_gravity="right"
		android:layout_height="wrap_content">
		<Button
			android:id="@+id/concertItemButtonAccept"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginRight="10px"
		/>
		<Button
			android:id="@+id/concertItemButtonMoreInfo"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginRight="10px"
		/>
	</LinearLayout>
</GridLayout>
